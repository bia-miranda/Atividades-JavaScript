    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/2370/2370279.png" type="image/x-icon">
    <script language="JavaScript">

        function mostrar() {
            var v = document.getElementById("txtval").value;
            switch (v) {
                case "1": {
                    document.getElementById("txtmes").value = "Janeiro";
                    break;
                }
                case "2": {
                    document.getElementById("txtmes").value = "Fevereiro";
                    break;
                }
                case "3": {
                    document.getElementById("txtmes").value = "Março";
                    break;
                }
                case "4": {
                    document.getElementById("txtmes").value = "Abril";
                    break;
                }
                case "5": {
                    document.getElementById("txtmes").value = "Maio";
                    break;
                }
                case "6": {
                    document.getElementById("txtmes").value = "Junho";
                    break;
                }
                case "7": {
                    document.getElementById("txtmes").value = "Julho";
                    break;
                }
                case "8": {
                    document.getElementById("txtmes").value = "Agosto";
                    break;
                }
                case "9": {
                    document.getElementById("txtmes").value = "Setembro";
                    break;
                }
                case "10": {
                    document.getElementById("txtmes").value = "Outubro";
                    break;
                }
                case "11": {
                    document.getElementById("txtmes").value = "Novembro";
                    break;
                }
                case "12": {
                    document.getElementById("txtmes").value = "Dezembro";
                    break;
                }
            }
        }

    </script>
    <style>
        * {
